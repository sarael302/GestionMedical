@model GestionMedical.Models.DossierMedical

@{
    ViewData["Title"] = "Détails du Dossier Médical";
}

<div class="consultation-page">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                    <path d="M14 2v6h6" />
                    <path d="M16 13H8" />
                    <path d="M16 17H8" />
                    <path d="M10 9H8" />
                </svg>
                Détails du Dossier Médical
            </h1>
        </div>
    </div>

    <div class="details-container">
        <div class="info-group">
            <h2 class="section-title">Informations du Patient</h2>
            <div class="info-item">
                <span class="info-label">Patient</span>
                <span class="info-value">@Html.DisplayFor(model => model.Patient.Nom) @Html.DisplayFor(model => model.Patient.Prenom)</span>
            </div>
            <div class="info-item">
                <span class="info-label">Date de Naissance</span>
                <span class="info-value">@Html.DisplayFor(model => model.Patient.DateNaissance)</span>
            </div>
        </div>

        <div class="info-group">
            <h2 class="section-title">Informations du Médecin</h2>
            <div class="info-item">
                <span class="info-label">Médecin</span>
                <span class="info-value">@Html.DisplayFor(model => model.Medecin.Nom) @Html.DisplayFor(model => model.Medecin.Prenom)</span>
            </div>
            <div class="info-item">
                <span class="info-label">Spécialité</span>
                <span class="info-value">@Html.DisplayFor(model => model.Medecin.Specialite)</span>
            </div>
        </div>

        <div class="info-group">
            <h2 class="section-title">Détails de la Consultation</h2>
            <div class="info-item">
                <span class="info-label">Date du Rendez-vous</span>
                <span class="info-value">@Html.DisplayFor(model => model.Consultation.RendezVous.DateHeure)</span>
            </div>
            <div class="info-item">
                <span class="info-label">Résultat</span>
                <span class="info-value">@Html.DisplayFor(model => model.Consultation.Resultat)</span>
            </div>
            <div class="info-item">
                <span class="info-label">Ordonnance</span>
                <span class="info-value">@Html.DisplayFor(model => model.Consultation.Ordonnance)</span>
            </div>
            <div class="info-item">
                <span class="info-label">Ordre Médical</span>
                <span class="info-value">@Html.DisplayFor(model => model.Consultation.OrdreMedical)</span>
            </div>
        </div>

        <div class="form-actions">
            <a asp-action="Edit" asp-route-id="@Model?.DossierMedicalId" class="btn btn-warning">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                    <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z" />
                </svg>
                Modifier
            </a>
            <a asp-action="Index" class="btn btn-secondary">Retour</a>
        </div>
    </div>
</div>
