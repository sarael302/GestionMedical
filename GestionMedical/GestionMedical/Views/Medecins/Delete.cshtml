@model GestionMedical.Models.Medecin

@{
    ViewData["Title"] = "Supprimer un Médecin";
}

<div class="consultation-page consultation-delete-page">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 6h18" />
                    <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6" />
                    <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2" />
                </svg>
                Supprimer un Médecin
            </h1>
        </div>
    </div>

    <div class="form-container">
        <div class="alert alert-danger mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2">
                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />
                <line x1="12" y1="9" x2="12" y2="13" />
                <line x1="12" y1="17" x2="12.01" y2="17" />
            </svg>
            <div>
                <h4 class="alert-heading">Confirmation de suppression</h4>
                <p class="mb-0">Êtes-vous sûr de vouloir supprimer ce médecin ? Cette action est irréversible.</p>
            </div>
        </div>

        <div class="info-group">
            <div class="section-title">Informations du Médecin</div>

            <div class="info-item">
                <span class="info-label">Nom</span>
                <span class="info-value">@Model.Nom</span>
            </div>

            <div class="info-item">
                <span class="info-label">Prénom</span>
                <span class="info-value">@Model.Prenom</span>
            </div>

            <div class="info-item">
                <span class="info-label">Spécialité</span>
                <span class="info-value">@Model.Specialite</span>
            </div>

            <div class="info-item">
                <span class="info-label">Statut</span>
                <span class="info-value">
                    @if (Model.Disponible)
                    {
                        <span class="status-badge status-available">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                                <path d="M20 6 9 17l-5-5" />
                            </svg>
                            Disponible
                        </span>
                    }
                    else
                    {
                        <span class="status-badge status-unavailable">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                                <path d="M18 6 6 18" />
                                <path d="m6 6 12 12" />
                            </svg>
                            Indisponible
                        </span>
                    }
                </span>
            </div>

            @if (!Model.Disponible && Model.DateRetour.HasValue)
            {
                <div class="info-item">
                    <span class="info-label">Date de Retour</span>
                    <span class="info-value">@Model.DateRetour.Value.ToString("dd/MM/yyyy")</span>
                </div>
            }
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MedecinId" />
            <div class="form-actions">
                <button type="submit" class="btn btn-danger">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                        <path d="M3 6h18" />
                        <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6" />
                        <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2" />
                    </svg>
                    Confirmer la suppression
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                        <path d="m12 19-7-7 7-7" />
                        <path d="M19 12H5" />
                    </svg>
                    Annuler
                </a>
            </div>
        </form>
    </div>
</div>
