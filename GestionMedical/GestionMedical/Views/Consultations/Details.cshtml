@model GestionMedical.Models.Consultation

@{
    ViewData["Title"] = "Détails de la Consultation";
}

<div class="consultation-details-page">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2">
                    <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z" />
                    <circle cx="12" cy="12" r="3" />
                </svg>
                Détails de la Consultation
            </h1>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="info-group">
                        <h3 class="section-title">Informations du Rendez-vous</h3>
                        <div class="info-item">
                            <span class="info-label">Patient</span>
                            <span class="info-value">@Html.DisplayFor(model => model.RendezVous.Patient.Nom)</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Médecin</span>
                            <span class="info-value">@Html.DisplayFor(model => model.RendezVous.Medecin.Nom)</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Date et Heure</span>
                            <span class="info-value">@Model.RendezVous.DateHeure.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-group">
                        <h3 class="section-title">Détails de la Consultation</h3>
                        <div class="info-item">
                            <span class="info-label">Prix</span>
                            <span class="info-value">@Html.DisplayFor(model => model.Prix) DH</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Ordre Médical</span>
                            <span class="info-value">@Html.DisplayFor(model => model.OrdreMedical)</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <div class="info-group">
                        <h3 class="section-title">Résultats et Prescriptions</h3>
                        <div class="info-item">
                            <span class="info-label">Résultat de la Consultation</span>
                            <span class="info-value">@Html.DisplayFor(model => model.Resultat)</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Ordonnance</span>
                            <span class="info-value">@Html.DisplayFor(model => model.Ordonnance)</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <a asp-action="Edit" asp-route-id="@Model?.ConsultationId" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                        <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z" />
                    </svg>
                    Modifier
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                        <path d="m12 19-7-7 7-7" />
                        <path d="M19 12H5" />
                    </svg>
                    Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
