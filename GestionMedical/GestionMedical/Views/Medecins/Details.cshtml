@model GestionMedical.Models.Medecin

@{
    ViewData["Title"] = "Détails du Médecin";
}

<div class="consultation-page">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z" />
                    <circle cx="12" cy="12" r="3" />
                </svg>
                Détails du Médecin
            </h1>
        </div>
    </div>

    <div class="form-container">
        <div class="info-group">
            <div class="section-title">Informations Personnelles</div>

            <div class="info-item">
                <span class="info-label">Nom</span>
                <span class="info-value">@Model.Nom</span>
            </div>

            <div class="info-item">
                <span class="info-label">Prénom</span>
                <span class="info-value">@Model.Prenom</span>
            </div>

            <div class="info-item">
                <span class="info-label">Spécialité</span>
                <span class="info-value">@Model.Specialite</span>
            </div>
        </div>

        <div class="info-group">
            <div class="section-title">Disponibilité</div>

            <div class="info-item">
                <span class="info-label">Statut</span>
                <span class="info-value">
                    @if (Model.Disponible)
                    {
                        <span class="status-badge status-available">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                                <path d="M20 6 9 17l-5-5" />
                            </svg>
                            Disponible
                        </span>
                    }
                    else
                    {
                        <span class="status-badge status-unavailable">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                                <path d="M18 6 6 18" />
                                <path d="m6 6 12 12" />
                            </svg>
                            Indisponible
                        </span>
                    }
                </span>
            </div>

            @if (!Model.Disponible && Model.DateRetour.HasValue)
            {
                <div class="info-item">
                    <span class="info-label">Date de Retour</span>
                    <span class="info-value">@Model.DateRetour.Value.ToString("dd/MM/yyyy")</span>
                </div>
            }
        </div>

        <div class="form-actions">
            <a asp-action="Edit" asp-route-id="@Model.MedecinId" class="btn btn-warning">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                    <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z" />
                </svg>
                Modifier
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                    <path d="m12 19-7-7 7-7" />
                    <path d="M19 12H5" />
                </svg>
                Retour à la liste
            </a>
        </div>
    </div>
</div>
