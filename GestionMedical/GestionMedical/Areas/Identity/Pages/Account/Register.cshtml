@page
@model RegisterModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion Médicale</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-50 min-h-screen font-['Inter']">
    <div class="min-h-screen flex flex-col items-center justify-center p-4">
        <div class="w-full max-w-md">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-gray-900">Create Account</h1>
                <p class="mt-2 text-gray-600">Join us today and get started</p>
            </div>

            <div class="bg-white shadow-xl rounded-xl p-8">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg"></div>

                    <div class="space-y-2">
                        <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700">Email address</label>
                        <div class="relative">
                            <input asp-for="Input.Email"
                                   class="block w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out"
                                   placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="mt-1 text-sm text-red-600"></span>
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">Password</label>
                        <div class="relative">
                            <input asp-for="Input.Password"
                                   class="block w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out"
                                   placeholder="••••••••"
                                   type="password" />
                            <span asp-validation-for="Input.Password" class="mt-1 text-sm text-red-600"></span>
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                        <div class="relative">
                            <input asp-for="Input.ConfirmPassword"
                                   class="block w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-150 ease-in-out"
                                   placeholder="••••••••"
                                   type="password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="mt-1 text-sm text-red-600"></span>
                        </div>
                    </div>

                    <button id="registerSubmit"
                            type="submit"
                            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out">
                        Create Account
                    </button>

                    <p class="text-center text-sm text-gray-600">
                        Already have an account?
                        <a asp-page="./Login"
                           asp-route-returnUrl="@Model.ReturnUrl"
                           class="font-medium text-blue-600 hover:text-blue-500 transition-colors">
                            Sign in instead
                        </a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</body>
</html>