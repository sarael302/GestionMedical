@page
@model LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion Médicale</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <div class="min-h-screen flex items-center justify-center">
        <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
            <h1 class="text-2xl font-bold mb-4 text-center">@ViewData["Title"]</h1>
            <form id="account" method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control border-gray-300 focus:ring-blue-500 focus:border-blue-500" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control border-gray-300 focus:ring-blue-500 focus:border-blue-500" placeholder="password" type="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
                </div>

                <div class="flex items-center justify-between">
                    <label asp-for="Input.RememberMe" class="flex items-center text-gray-700">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <span class="ml-2">Remember Me</span>
                    </label>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-sm text-blue-600 hover:underline">Forgot password?</a>
                </div>

                <button id="login-submit" type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700">Log in</button>

                <div class="text-center">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-sm text-blue-600 hover:underline">Register as a new user</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
